<?xml version="1.0" encoding="utf-8" ?>

<log4net>

  <!-- ConsoleAppender -->
  <appender name="consoleLogger" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d{HH:mm:ss.fff} %-5level %-10.10t %-55.55c %m %n" />
    </layout>
    <threshold value="WARN" />
  </appender>

  <!-- Root Logger-->
  <root>
    <level value="DEBUG" />
    <appender-ref ref="consoleLogger" />
  </root>

  <!-- PerfTrace Logger-->
  <logger name="PerfTraceLog" additivity="false">
    <level value="INFO" />
    <appender-ref ref="PerfTraceAppender" />
  </logger>

</log4net>
